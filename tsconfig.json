{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "util.mjs", "util.d.mts"],
  "exclude": ["node_modules", "dist", ".mastra"]
}
